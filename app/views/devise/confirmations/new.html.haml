%h3.card-title.mb-4 Resend confirmation instructions
= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "row gy-3" }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email, class: "form-label"
    = f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control"
  .actions.d-grid
    = f.submit "Resend confirmation instructions", class: "btn btn-primary"
= render "devise/shared/links"
