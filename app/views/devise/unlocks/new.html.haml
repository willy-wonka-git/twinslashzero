%h3.card-title.mb-4= t("devise.unlocks.new.resend_unlock_instructions")
= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "row gy-3" }) do |f|
  = render "devise/shared/error_messages", resource: resource
  = f.input :email, autofocus: true, required: true, autocomplete: "email"
  .actions.d-grid
    = f.button :submit, t("devise.unlocks.new.resend_unlock_instructions"), class: "btn btn-primary"
= render "devise/shared/links"
