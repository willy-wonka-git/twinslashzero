%h3.card-title.mb-4= t("devise.passwords.new.forgot_your_password")
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "row gy-3" }) do |f|
  = render "devise/shared/error_messages", resource: resource
  = f.input :email, autofocus: true, required: true, autocomplete: "email"
  .actions.d-grid
    = f.button :submit, t("devise.passwords.new.send_me_reset_password_instructions"), class: "btn-primary"
= render "devise/shared/links"
