%p#notice= notice

%p
  %b= t("title")
  = @post_category.title
%p
  %b= t("description")
  = @post_category.description
- if can? :edit, @post_category
  = link_to t("edit"), edit_post_category_path(@post_category), class: "btn btn-primary mr-2"
- if (can? :destroy, @post_category) && @posts.empty? 
  = link_to t("destroy"), post_category_path(@post_category), method: :delete, class: "btn btn-danger mr-2"
= link_to t("back"), post_categories_path, class: "btn btn-secondary"

= render "common/paging", resource: @posts
= render "posts/list", posts: @posts
= render "common/paging", resource: @posts
